#:import MapView kivy.garden.mapview.MapView
#:import MapMarkerPopup kivy.garden.mapview.MapView
<UbicacionScreen>:

    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#ffffff")
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            rows: 1
            pos_hint:{'top': 1, 'left': 1}
            size_hint: 1, .9

            MapView:
                lat: -31.383153403277547
                lon: -57.93433380126953
                zoom: 12
                double_tap_zoom:True
                on_lat:
                    print('lat', self.lat)
                on_lon:
                    print('lon', self.lon)

                MapMarkerPopup:
                    lat:-31.383153403277547
                    lon:-57.93433380126953
                    Button:
                        on_release:
                            root.center_on(-37,-52)
                            print(root.get_bbox())


        GridLayout:
            rows: 1
            pos_hint:{'top': .1, 'left': 1}
            size_hint: 1, .1

            ImageButton:
                source: 'icons/homew.png'
                on_release:
                    app.change_screen('home_screen')
            ImageButton:
                source: 'icons/ticketsw.png'
                on_release: app.change_screen ('descuentos')
            ImageButton:
                source: 'icons/ubicacionb.png'
                on_release:
                    app.change_screen("ubicacion_screen")
            ImageButton:
                source: 'icons/tiendaw.png'
                on_release:
                    app.change_screen("store_screen")
















