<NotificacionesScreen>:

    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#ffffff")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text:'NOTIFICACIONES'
            pos_hint:{'top': 1, 'left': 1}
            size_hint: 1, .2
            color:(0, 0, 0, 1.0)

        GridLayout:
            cols: 2
            rows: 6
            pos_hint:{'top': .8, 'left': 1}
